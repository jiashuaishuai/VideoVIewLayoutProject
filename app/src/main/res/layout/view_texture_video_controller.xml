<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@drawable/bg_video_view_controller"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/btn_video_play"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="12:00"
        android:textColor="#FFE8E8E9"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/video_controller_progress_style_seek_bar"
        android:thumb="@drawable/video_controller_progress_style_seek_bar_thumb"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="12:00"
        android:textColor="@color/main_text"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/btn_full_screen"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/btn_video_full_screen"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>